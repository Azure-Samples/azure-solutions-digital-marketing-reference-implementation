{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "NamePrefix": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Used to construct all resouce names as prefix+service. Should be all lowercase to avoid naming issues"
      }
    },
    "AppPlanSKU": {
      "type": "string",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "defaultValue": "Standard",
      "metadata": {
        "description": "The App Service plan SKU (this hosts the web site and webjob)"
      }
    },
    "AppPlanWorkerSize": {
      "type": "string",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "defaultValue": "0",
      "metadata": {
        "description": "Worker Size( 0=Small, 1=Medium, 2=Large )"
      }
    },
    "StorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "The storage type governs replication - local, zone, geo or read-access geo"
      }
    },
    "SqlAdministratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password to use for the SQL Server sqladmin account"
      }
    },
    "AppInsightsLocation": {
      "type": "string",
      "defaultValue": "EastUS",
      "allowedValues": [
        "EastUS",
        "NorthEurope",
        "WestEurope"
      ],
      "metadata": {
        "description": "Location of the AppInsights service"
      }
    },
    "WebLocations": {
      "type": "array",
      "defaultValue": [
        "[resourceGroup().location]"
      ]
    }
  },
  "variables": {
    "AppPlanName": "[tolower(concat(parameters('NamePrefix'),'AppPlan',uniqueString(resourceGroup().id)))]",
    "WebSiteName": "[tolower(concat(parameters('NamePrefix'),'WebSite'))]",
    "ApiSiteName": "[tolower(concat(parameters('NamePrefix'),'ApiSite'))]",
    "ManagementSiteName": "[tolower(concat(parameters('NamePrefix'),'ManagementSite'))]",
    "StorageName": "[tolower(concat(parameters('NamePrefix'),uniqueString(resourceGroup().id)))]",
    "SqlServerName": "[tolower(concat(parameters('NamePrefix'),'SqlDb',uniqueString(resourceGroup().id)))]",
    "SqlDatabaseName": "AzureKit",
    "SqlAdministratorLogin": "sqladmin",
    "AppInsightsName": "[concat(parameters('NamePrefix'),'Insights')]",
    "RedisCache": {
      "Name": "[tolower(concat(parameters('NamePrefix'),'Redis',uniqueString(resourceGroup().id)))]",
      "SKUName": "Basic",
      "SKUFamily": "C",
      "SKUCapacity": 0,
      "WebAppRedisSettingText": ",abortConnect=false,ssl=true,password="
    },
    "WebTrafficMgr": {
      "Name": "[tolower(concat(parameters('NamePrefix'),uniqueString(resourceGroup().id)))]",
      "Dns": "[tolower(concat(parameters('NamePrefix'),'TraffMgr'))]"
    },
    "ApiTrafficMgr": {
      "Name": "[tolower(concat(parameters('NamePrefix'),'Api',uniqueString(resourceGroup().id)))]",
      "Dns": "[tolower(concat(parameters('NamePrefix'),'ApiTraffMgr'))]"
    },
    "Cdn": {
      "profileName": "[tolower(concat(parameters('NamePrefix'),'cdn'))]",
      "endpointName": "[tolower(concat(parameters('NamePrefix'),'cdnendpoint'))]"
    },
    "DocumentDB": {
      "Name": "[tolower(concat(parameters('NamePrefix'), 'docdb', uniqueString(resourceGroup().id)))]",
      "OfferType": "Standard",
      "ConsistencyLevel": "Session",
      "MaxStalenessPrefix": 10,
      "MaxIntervalInSeconds": 5
    },
    "NotificationHub": {
      "NamespaceName": "[tolower(concat(parameters('NamePrefix'),'NS',uniqueString(resourceGroup().id)))]",
      "NotificationHubName": "[tolower(concat(parameters('NamePrefix'),'NotifyHub',uniqueString(resourceGroup().id)))]",
      "SKU": "Free"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-04-08",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "name": "[variables('DocumentDB').Name]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "DocumentDB"
      },
      "properties": {
        "name": "[variables('DocumentDB').Name]",
        "databaseAccountOfferType": "[variables('DocumentDB').OfferType]",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "[variables('DocumentDB').ConsistencyLevel]",
          "maxStalenessPrefix": "[variables('DocumentDB').MaxStalenessPrefix]",
          "maxIntervalInSeconds": "[variables('DocumentDB').MaxIntervalInSeconds]"
        }
      }
    },
    {
      "name": "[variables('SqlServerName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "SqlServer"
      },
      "apiVersion": "2014-04-01-preview",
      "properties": {
        "administratorLogin": "[variables('SqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('SqlAdministratorLoginPassword')]",
        "version": "12.0"
      },
      "resources": [
        {
          "name": "[variables('SqlDatabaseName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "tags": {
            "displayName": "Database"
          },
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('SqlServerName'))]"
          ],
          "properties": {
            "edition": "Standard",
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "S0"
          }
        },
        {
          "type": "firewallrules",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('SqlServerName'))]"
          ],
          "location": "[resourceGroup().location]",
          "name": "AllowAllWindowsAzureIps",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          }
        }
      ]
    },
    {
      "name": "[concat(variables('AppPlanName'), copyIndex())]",
      "type": "Microsoft.Web/serverfarms",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "AppSvcLoop"
      },
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "apiVersion": "2014-06-01",
      "dependsOn": [],
      "tags": {
        "displayName": "AppPlan"
      },
      "properties": {
        "name": "[concat(variables('AppPlanName'), copyIndex())]",
        "sku": "[parameters('AppPlanSKU')]",
        "workerSize": "[parameters('AppPlanWorkerSize')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[concat(variables('WebSiteName'), copyIndex())]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebAppLoop"
      },
      "type": "Microsoft.Web/sites",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "AppSvcLoop",
        "RedisLoop",
        "[concat('Microsoft.Sql/servers/', variables('sqlserverName'),'/databases/', variables('SqlDatabaseName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), copyIndex())]": "Resource",
        "displayName": "WebSite"
      },
      "properties": {
        "name": "[concat(variables('WebSiteName'), copyIndex())]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), copyIndex()))]"
      },
      "resources": [
      ]
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('WebSiteName'), copyIndex(),'/appsettings')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebSettingsLoop"
      },
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "dependsOn": [
        "WebAppLoop"
      ],
      "properties": {
        "azureDocumentDBServer": "[variables('DocumentDB').Name]",
        "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
        "azureStorageAccountName": "[variables('StorageName')]",
        "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
        "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
        "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex()))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex())), '2015-08-01').primaryKey)]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('WebSiteName'), copyIndex(),'/connectionStrings')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebConnectionStringsLoop"
      },
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "dependsOn": [
        "WebAppLoop"
      ],
      "properties": {
        "SqlDbConnection": {
          "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('SqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('SqlDatabaseName'), ';User Id=', variables('SqlAdministratorLogin'), '@', variables('sqlserverName'), ';Password=', parameters('SqlAdministratorLoginPassword'), ';')]",
          "type": "SQLServer"
        }
      }
    },
    {
      "name": "[concat(variables('WebSiteName'), copyIndex(), '/staging')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebAppStagingLoop"
      },
      "type": "Microsoft.Web/sites/slots",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', concat(variables('WebSiteName'), copyIndex()))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), copyIndex())]": "Resource",
        "displayName": "WebSite"
      },
      "properties": {
        "name": "[concat(variables('WebSiteName'), copyIndex(), '(staging)')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), copyIndex()))]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "location": "[parameters('WebLocations')[copyIndex()]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('WebSiteName'), copyIndex(), '/slots/staging')]"
          ],
          "properties": {
            "azureDocumentDBServer": "[variables('DocumentDB').Name]",
            "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
            "azureStorageAccountName": "[variables('StorageName')]",
            "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
            "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
            "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex()))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex())), '2015-08-01').primaryKey)]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "connectionStrings",
          "type": "config",
          "location": "[parameters('WebLocations')[copyIndex()]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('WebSiteName'), copyIndex(), '/slots/staging')]"
          ],
          "properties": {
            "SqlDbConnection": {
              "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('SqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('SqlDatabaseName'), ';User Id=', variables('SqlAdministratorLogin'), '@', variables('sqlserverName'), ';Password=', parameters('SqlAdministratorLoginPassword'), ';')]",
              "type": "SQLServer"
            }
          }
        }
      ]
    },
    {
      "name": "[concat(variables('ApiSiteName'), copyIndex())]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebApiAppLoop"
      },
      "type": "Microsoft.Web/sites",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "AppSvcLoop",
        "RedisLoop",
        "[concat('Microsoft.NotificationHubs/namespaces/', variables('NotificationHub').NamespaceName, '/notificationHubs/', variables('NotificationHub').NotificationHubName)]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), copyIndex())]": "Resource",
        "displayName": "WebSite"
      },
      "properties": {
        "name": "[concat(variables('ApiSiteName'), copyIndex())]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), copyIndex()))]"
      },
      "resources": [
      ]
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('ApiSiteName'), copyIndex(),'/appsettings')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebApiSettingsLoop"
      },
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "dependsOn": [
        "WebApiAppLoop"
      ],
      "properties": {
        "azureDocumentDBServer": "[variables('DocumentDB').Name]",
        "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
        "azureStorageAccountName": "[variables('StorageName')]",
        "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
        "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
        "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex()))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex())), '2015-08-01').primaryKey)]",
        "MS_NotificationHubName": "[variables('NotificationHub').NamespaceName]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('ApiSiteName'), copyIndex(),'/connectionStrings')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebApiConnectionStringsLoop"
      },
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "dependsOn": [
        "WebApiAppLoop"
      ],
      "properties": {
        "MS_NotificationHubConnectionString": {
          "value": "[listKeys(resourceId('Microsoft.NotificationHubs/namespaces/notificationHubs/authorizationRules', variables('NotificationHub').NamespaceName, variables('NotificationHub').NotificationHubName, 'DefaultFullSharedAccessSignature'), providers('Microsoft.NotificationHubs', 'namespaces/notificationHubs').apiVersions[0]).primaryConnectionString]",
          "type": "custom"
        },
        "SqlDbConnection": {
          "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('SqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('SqlDatabaseName'), ';User Id=', variables('SqlAdministratorLogin'), '@', variables('sqlserverName'), ';Password=', parameters('SqlAdministratorLoginPassword'), ';')]",
          "type": "SQLServer"
        }
      }
    },
    {
      "name": "[concat(variables('ApiSiteName'), copyIndex(), '/staging')]",
      "copy": {
        "count": "[length(parameters('WebLocations'))]",
        "name": "WebApiAppStagingLoop"
      },
      "type": "Microsoft.Web/sites/slots",
      "location": "[parameters('WebLocations')[copyIndex()]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', concat(variables('ApiSiteName'), copyIndex()))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), copyIndex())]": "Resource",
        "displayName": "WebSite"
      },
      "properties": {
        "name": "[concat(variables('ApiSiteName'), copyIndex(), '(staging)')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), copyIndex()))]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "location": "[parameters('WebLocations')[copyIndex()]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('ApiSiteName'), copyIndex(), '/slots/staging')]"
          ],
          "properties": {
            "azureDocumentDBServer": "[variables('DocumentDB').Name]",
            "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
            "azureStorageAccountName": "[variables('StorageName')]",
            "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
            "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
            "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex()))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, copyIndex())), '2015-08-01').primaryKey)]",
            "MS_NotificationHubName": "[variables('NotificationHub').NamespaceName]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "connectionStrings",
          "type": "config",
          "location": "[parameters('WebLocations')[copyIndex()]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('ApiSiteName'), copyIndex(), '/slots/staging')]"
          ],
          "properties": {
            "MS_NotificationHubConnectionString": {
              "value": "[listKeys(resourceId('Microsoft.NotificationHubs/namespaces/notificationHubs/authorizationRules', variables('NotificationHub').NamespaceName, variables('NotificationHub').NotificationHubName, 'DefaultFullSharedAccessSignature'), providers('Microsoft.NotificationHubs', 'namespaces/notificationHubs').apiVersions[0]).primaryConnectionString]",
              "type": "custom"
            },
            "SqlDbConnection": {
              "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('SqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('SqlDatabaseName'), ';User Id=', variables('SqlAdministratorLogin'), '@', variables('sqlserverName'), ';Password=', parameters('SqlAdministratorLoginPassword'), ';')]",
              "type": "SQLServer"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('ManagementSiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('WebLocations')[0]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "AppSvcLoop",
        "RedisLoop",
        "[concat('Microsoft.NotificationHubs/namespaces/', variables('NotificationHub').NamespaceName, '/notificationHubs/', variables('NotificationHub').NotificationHubName)]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), 0)]": "Resource",
        "displayName": "ManagementSite"
      },
      "properties": {
        "name": "[variables('ManagementSiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), 0))]"
      },
      "resources": [
      ]
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('ManagementSiteName'), '/appsettings')]",
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[0]]",
      "dependsOn": [
        "[variables('ManagementSiteName')]"
      ],
      "properties": {
        "azureDocumentDBServer": "[variables('DocumentDB').Name]",
        "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
        "azureStorageAccountName": "[variables('StorageName')]",
        "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
        "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
        "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, 0))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, 0)), '2015-08-01').primaryKey)]",
        "MS_NotificationHubName": "variables('NotificationHub').NamespaceName"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[concat(variables('ManagementSiteName'), '/connectionStrings')]",
      "type": "Microsoft.Web/sites/config",
      "location": "[parameters('WebLocations')[0]]",
      "dependsOn": [
        "[variables('ManagementSiteName')]"
      ],
      "properties": {
        "MS_NotificationHubConnectionString": {
          "value": "[listKeys(resourceId('Microsoft.NotificationHubs/namespaces/notificationHubs/authorizationRules', variables('NotificationHub').NamespaceName, variables('NotificationHub').NotificationHubName, 'DefaultFullSharedAccessSignature'), providers('Microsoft.NotificationHubs', 'namespaces/notificationHubs').apiVersions[0]).primaryConnectionString]",
          "type": "custom"
        },
        "SqlDbConnection": {
          "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('SqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('SqlDatabaseName'), ';User Id=', variables('SqlAdministratorLogin'), '@', variables('sqlserverName'), ';Password=', parameters('SqlAdministratorLoginPassword'), ';')]",
          "type": "SQLServer"
        }
      }
    },
    {
      "name": "[concat(variables('ManagementSiteName'), '/staging')]",
      "type": "Microsoft.Web/sites/slots",
      "location": "[parameters('WebLocations')[0]]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', concat(variables('ManagementSiteName')))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('AppPlanName'), 0)]": "Resource",
        "displayName": "ManagementSite"
      },
      "properties": {
        "name": "[concat(variables('ManagementSiteName'), '(staging)')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', concat(variables('AppPlanName'), 0))]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "location": "[parameters('WebLocations')[0]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('ManagementSiteName'), '/slots/staging')]"
          ],
          "properties": {
            "azureDocumentDBServer": "[variables('DocumentDB').Name]",
            "azureDocumentDBKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', variables('DocumentDB').Name), '2015-04-08').primaryMasterKey]",
            "azureStorageAccountName": "[variables('StorageName')]",
            "azureStorageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), '2015-06-15').key1]",
            "azureStorageCDN": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints',variables('Cdn').profileName,variables('Cdn').endpointName),'2016-04-02').hostName]",
            "redisCacheConnection": "[concat(reference(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, 0))).hostName, variables('RedisCache').WebAppRedisSettingText, listKeys(resourceId('Microsoft.Cache/Redis', concat(variables('RedisCache').Name, 0)), '2015-08-01').primaryKey)]",
            "MS_NotificationHubName": "variables('NotificationHub').NamespaceName"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "connectionStrings",
          "type": "config",
          "location": "[parameters('WebLocations')[0]]",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('ManagementSiteName'), '/slots/staging')]"
          ],
          "properties": {
            "MS_NotificationHubConnectionString": {
              "value": "[listKeys(resourceId('Microsoft.NotificationHubs/namespaces/notificationHubs/authorizationRules', variables('NotificationHub').NamespaceName, variables('NotificationHub').NotificationHubName, 'DefaultFullSharedAccessSignature'), providers('Microsoft.NotificationHubs', 'namespaces/notificationHubs').apiVersions[0]).primaryConnectionString]",
              "type": "custom"
